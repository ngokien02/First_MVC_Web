@model List<Category>

<partial name="_Notification" />

<div class="row">
	<div class="col-md-6">
		<h2>DANH MỤC THỂ LOẠI</h2>
	</div>
	<div class="col-md-6 text-right">
		<button id="btnThem" type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
			<i class="bi bi-plus-circle-fill"></i> Thêm mới
		</button>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Tên</th>
			<th>STT</th>
			<th>Tùy chọn</th>
		</tr>

	</thead>
	<tbody>
		@foreach (var x in Model)
		{
			<tr>
				<td>@x.Name</td>
				<td>@x.DisplayOrder</td>
				<td>
					<button href="/admin/category/update?id=@x.Id" id="btnUpdateCategory" type="button" class="btn btn-primary manageBtn" data-bs-toggle="modal" data-bs-target="#UpdateCategoryModal">
						<i class="bi bi-plus-circle-fill"></i> Sửa
					</button>
					<button Id="@x.Id" class="btn btn-danger btnDeleteTL">
						<i class="bi bi-trash"></i> Xóa
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>

<p id="thongBaoXoaTL" style="font-size: x-large; margin-top:10px; margin-bottom:0;"></p>

<div class="modal fade" id="UpdateCategoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content p-3" id="UpdateCategoryModalBody">
		</div>
	</div>
</div>