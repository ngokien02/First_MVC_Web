@model List<Product>;

<partial name="_Notification" />

<div class="row mb-4">
	<div class="col-md-6">
		<h2>LIST PRODUCT</h2>
	</div>
	<div class="col-md-6 text-right">
		<a asp-action="Add" class="btn btn-primary">
			<i class="bi bi-plus-circle-fill"></i> Add New
		</a>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Category</th>
			<th>Image</th>
			<th>Action </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var x in Model)
		{
			<tr>
				<td>@x.Name</td>
				<td>@x.Price</td>
				<td>@x.Category.Name</td>
				<td>
					@if (x.ImageUrl != null)
					{
						<img src="@x.ImageUrl" style="width:100px" />
					}
				</td>
				<td>
					<a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
						<i class="bi bi-pencil-square"></i> Edit
					</a>
					<a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
						<i class="bi bi-trash"></i> Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="d-flex justify-content-center mt-3">
	<ul class="pagination">
		@for (int i = 1; i <= ViewBag.TotalPages; i++)
		{
			<li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
				<a class="page-link" href="?page=@i">@i</a>
			</li>
		}
	</ul>
</div>

@section Scripts {
	<script>
		document.querySelectorAll('input[type="file"]').forEach(input => {
			input.addEventListener('change', function (event) {
				const file = event.target.files[0];
				if (file) {
					const reader = new FileReader();
					reader.onload = function (e) {
						const img = document.getElementById("previewImage");
						img.src = e.target.result;
					};
					reader.readAsDataURL(file);
				}
			});
		});

		@if (TempData["DeleteSuccess"] != null)
		{
			<text>
					Swal.fire({
						icon: 'success',
					title: 'Thành công',
					text: '@Html.Raw(Json.Serialize(TempData["DeleteSuccess"]))'
										});
			</text>
		}
	</script>
} 