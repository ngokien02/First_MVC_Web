@model Product
<form asp-action="Add" method="post" enctype="multipart/form-data">
	<h2>Thêm mới sản phẩm</h2>
	<hr />

	<div class="row">
		<div class="col-md-12">
			<div class="form-group pb-2">
				<label>Tên sản phẩm</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name"  class="text-danger"></span>
			</div>
			<div class="form-group pb-2">
				<label>Mô tả</label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group pb-2">
				<label>Giá</label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group pb-2">
				<label>Loại</label>
				<select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-control">
					<option disabled selected>==Chọn thể loại===</option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group pb-2">
				<label>Ảnh minh họa</label>
				<input type="file" name="ImgFile" class="form-control" />
				<span asp-validation-for="ImgFile" class="text-danger"></span>
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-primary"> Lưu </button>
	<a asp-action="Index" class="btn btn-secondary"> Về trang quản lý </a>
</form>